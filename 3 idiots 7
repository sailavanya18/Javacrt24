import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        float x1,y1,x2,y2;
        x1=s.nextFloat();
        y1=s.nextFloat();
        x2=s.nextFloat();
        y2=s.nextFloat();
        float x=(x1+x2)/2;
        float y=(y1+y2)/2;
        System.out.printf("Binoy's house is located at (%.1f,%.1f)",x,y);
    }
}
